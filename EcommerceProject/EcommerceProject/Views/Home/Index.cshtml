@{
    ViewData["Title"] = "Home Page";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .button {
            background-color: deepskyblue;
            border: none;
            color: white;
            padding: 12px 24px;
            text-align: center;
            font-size: 16px;
            margin: 4px 2px;
            opacity: 0.6;
            transition: 0.3s;
            display: inline-block;
            text-decoration: none;
            cursor: pointer;
        }

            .button:hover {
                opacity: 1
            }
    </style>
</head>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/monitor1.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                
                <p style="color:black;" align="right"<b>VECKANS DEAL</b></p> <p style="color:black;" align="right"> Samsung monitor, 1399kr!</p>
                 <a class="button" <a asp-area="" asp-controller="Products" asp-action="Subcategory" asp-route-id="Monitors">
                    See More
                    </a></a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/p30pro.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <br />
                     <p style="color:dimgray;"> Huawei P30 Pro, 8500kr! </p>
                    <br />
                    <a class="button" <a asp-area="" asp-controller="Products" asp-action="Subcategory" asp-route-id="Huawei">
                    See More
                    </a></a>
                </p>
            </div>
        </div>
        
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


    
</div>
